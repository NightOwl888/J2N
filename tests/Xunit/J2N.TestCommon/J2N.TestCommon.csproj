<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$(RepositoryRoot).build/TestTargetFramework.props" />
  
  <PropertyGroup>
    <RootNamespace>J2N</RootNamespace>
    <Description>Abstractions for testing in Xunit (common base classes and mocks).</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="xunit" Version="$(XunitPackageReferenceVersion)" />

    <!-- These are transitive dependencies, but the version being resolved is vulnerable, so we are upgrading here. -->
    <PackageReference Include="System.Net.Http" Version="$(SystemNetHttpPackageReferenceVersion)" />
    <PackageReference Include="System.Text.RegularExpressions" Version="$(SystemTextRegularExpressionsPackageReferenceVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\src\J2N\J2N.csproj">
      <SetTargetFramework>$(SetTargetFramework)</SetTargetFramework>
    </ProjectReference>
    <ProjectReference Include="..\..\..\src\J2N.TestUtilities\J2N.TestUtilities.csproj" />
    <ProjectReference Include="..\..\..\src\J2N.TestUtilities.Xunit\J2N.TestUtilities.Xunit.csproj" />
  </ItemGroup>

</Project>
