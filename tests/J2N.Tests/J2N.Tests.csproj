<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$(SolutionDir)/build/TestTargetFramework.props" />
  
  <PropertyGroup>
    <RootNamespace>J2N</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'netcoreapp2.0' ">
    <DefineConstants>$(DefineConstants);NETSTANDARD;FEATURE_SERIALIZABLE;FEATURE_THREADINTERRUPT;FEATURE_THREADABORT;FEATURE_THREADYIELD;FEATURE_THREADPRIORITY</DefineConstants>
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'netcoreapp1.0' ">
    <DefineConstants>$(DefineConstants);NETSTANDARD</DefineConstants>
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'net451' ">
    <DefineConstants>$(DefineConstants);FEATURE_SERIALIZABLE;FEATURE_SERIALIZABLE_EXCEPTIONS;FEATURE_THREADINTERRUPT;FEATURE_THREADABORT;FEATURE_THREADYIELD;FEATURE_THREADPRIORITY</DefineConstants>
    <DebugType>full</DebugType>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netcoreapp2.0' ">
    <PackageReference Include="System.Runtime" Version="$(SystemRuntimePackageReferenceVersion)" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netcoreapp1.0' ">
    <PackageReference Include="System.Runtime" Version="$(SystemRuntimePackageReferenceVersion)" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net451' ">
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="hyts_PropertiesTest.properties" />
    <None Remove="IO\ReadFully.txt" />
    <None Remove="test_resource.txt" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\TestAssemblyInfo.cs" Link="Properties\TestAssemblyInfo.cs" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="hyts_PropertiesTest.properties" />
    <EmbeddedResource Include="IO\ReadFully.txt" />
    <EmbeddedResource Include="test_resource.txt" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\J2N.TestFramework\J2N.TestFramework.csproj" />
    <ProjectReference Include="..\..\src\J2N\J2N.csproj" />
  </ItemGroup>

</Project>
